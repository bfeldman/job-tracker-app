<!DOCTYPE html>
<html>
  <head>
    <title>JobTrackerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="/jobs">Jobs App</a>
      <% if @current_user %>
        <%= link_to "My Profile", user_path(@current_user) %>
      <% end %>
      
      <% if @current_user %>
        <%= link_to "Saved Jobs", jobs_path %>
      <% end %>
      
      <div>
        <% if @current_user %>
          <%= link_to "Log Out", logout_path, method: :delete %>
        <% else %>
          <%= link_to "Sign Up", new_user_path %> | <%= link_to "Log In", new_login_path %>
        <% end %>
      </div>
    </nav>
    
    <%= yield %>
  </body>
</html>
